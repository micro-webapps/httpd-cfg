{
    "virtualhost": "domain.tld",
    "directories": {
        "/usr/share/wordpress": {
            "alias": "/blog",
            "index": "index.php"
        }
    },
    "locations": {
        "/blog": {
            "match": {
                "regex": "\\.php$",
                "proxy_protocol": "fcgi://",
                "proxy_hostname": "localhost",
                "proxy_port": "9000",
                "proxy_backend_alias": "/usr/share/wordpress/$1",
                "allow": "all"
            }
        }
    }
}
