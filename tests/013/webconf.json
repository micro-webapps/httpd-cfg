{
    "virtualhost": "domain.tld",
    "directories": {
        "/usr/share/wordpress": {
            "alias": "/blog",
            "index": "index.php"
        }
    },
    "locations": {
        "/blog": {
            "match": {
                "\\.php$": {
                    "proxy_protocol": "fcgi://",
                    "proxy_hostname": "localhost",
                    "proxy_port": "9000",
                    "proxy_backend_alias": "/usr/share/wordpress/$1",
                    "allow": "all"
                },
                "\\.php5$": {
                    "proxy_protocol": "fcgi://",
                    "proxy_hostname": "localhost",
                    "proxy_port": "9000",
                    "proxy_backend_alias": "/usr/share/wordpress2/$1",
                    "allow": "all"
                }
            },
            "proxy_protocol": "fcgi://",
            "proxy_hostname": "localhost",
            "proxy_port": "9000",
            "proxy_backend_alias": "/usr/share/wordpress3/$1"
        }
    }
}
